{
  "compilerOptions": {
    "target": "es6",
    "useDefineForClassFields": false,
    "module": "es6",
    "lib": ["es6", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true
  },
  "include": ["src"]
}
